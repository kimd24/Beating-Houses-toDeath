<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h1>Search for houses</h1>
      <hr>
      <%= simple_form_for :search, url: root_path, method: "GET", html: {class: "form-inline" } do |f| %>
        <%= f.input :query, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
      <% i = 0 %>
      <% @buildings.each do |building| %>
        <h3><%= building.address %></h3>
        <p><%= link_to 'Show Details', building_path(building), class: 'link link--underlined' %></p>
        <p><%= building.price %></p>
        <% i+=1 %>
	<% break if i == 100 %>
      <% end %>
    </div>
  </div>
</div>
